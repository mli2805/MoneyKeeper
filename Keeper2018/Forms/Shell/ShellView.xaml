<Window x:Class="Keeper2018.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:keeper2018="clr-namespace:Keeper2018" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Width="737" Height="777" WindowStartupLocation="CenterScreen" 
        d:DataContext="{d:DesignInstance keeper2018:ShellViewModel}">
    <DockPanel>
        <keeper2018:MainMenuView DockPanel.Dock="Top" DataContext="{Binding MainMenuViewModel}"/>
        <Border DockPanel.Dock="Bottom" Height="30">
            <DockPanel Visibility="{Binding ShellPartsBinder.FooterVisibility}">
                <TextBlock Text="Writing..." Margin="10,7,0,0"/>
                <ProgressBar Height="20" Width="500" Margin="10,0,10,0" IsIndeterminate="True" 
                             Background="White" Foreground="Blue" BorderBrush="White"/>
                <TextBlock></TextBlock>
            </DockPanel>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <keeper2018:AccountTreeView Grid.Column="0" Margin="3,3,0,0" DataContext="{Binding AccountTreeViewModel}" DockPanel.Dock="Left"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <keeper2018:BalanceOrTrafficView Margin="3,3,3,3" DataContext="{Binding BalanceOrTrafficViewModel}"/>
                <keeper2018:TwoSelectorsView Grid.Row="1" Margin="3,0,3,0" DataContext="{Binding TwoSelectorsViewModel}"/>
            </Grid>
        </Grid>
    </DockPanel>

</Window>