<Window x:Class="Keeper2018.ExpensesOnAccount.ExpensesOnAccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:expensesOnAccount="clr-namespace:Keeper2018.ExpensesOnAccount"
        mc:Ignorable="d"
        SizeToContent="Width" WindowStartupLocation="CenterScreen" 
        d:DataContext="{d:DesignInstance expensesOnAccount:ExpensesOnAccountViewModel}">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="28"/>
            </Grid.RowDefinitions>
            <DataGrid ItemsSource="{Binding Expenses}" 
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Foreground="Red"
                          HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LavenderBlush" Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="10"/>
                    <DataGridTextColumn Binding="{Binding Category}" Width="160"/>
                    <DataGridTextColumn Binding="{Binding TotalStr}" Width="190"/>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding ExpensesTotalStr}" 
                           Margin="220,2,5,2" FontWeight="Bold" Foreground="Red"/>
            <DataGrid Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Incomes}" 
                         AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Foreground="Blue"
                         HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LavenderBlush" Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="10"/>
                    <DataGridTextColumn Binding="{Binding Category}" Width="160"/>
                    <DataGridTextColumn Binding="{Binding TotalStr}" Width="190"/>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Grid.Row="1" Grid.Column="1"  Text="{Binding IncomesTotalStr}" 
                       Margin="220,2,5,2" FontWeight="Bold" Foreground="Blue"/>
        </Grid>

        <DataGrid ItemsSource="{Binding Transactions}" 
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                  HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LavenderBlush" Margin="5">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Foreground" Value="{Binding ColorStr}" />
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Width="10"/>
                <DataGridTextColumn Binding="{Binding Timestamp , StringFormat='{}{0:dd/MM/yyyy}'}" Width="70"/>
                <DataGridTextColumn Binding="{Binding Category}" Width="130"/>
                <DataGridTextColumn Binding="{Binding CounterpartyName}" Width="130"/>
                <DataGridTextColumn Binding="{Binding AmountStr}" Width="90"/>
                <DataGridTextColumn Binding="{Binding Comment}" Width="320"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
