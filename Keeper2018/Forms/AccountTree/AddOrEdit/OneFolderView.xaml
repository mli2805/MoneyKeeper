<Window x:Class="Keeper2018.OneFolderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        SizeToContent="Height" Width="400">
    <StackPanel>
        <DockPanel DockPanel.Dock="Top" Height="30" Margin="5,10,5,0">
            <TextBlock DockPanel.Dock="Right" Margin="5" Width="300" Text="{Binding ParentFolder}"/>
            <TextBlock Margin="5" Text="В папке"  HorizontalAlignment="Left"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="30" Margin="5">
            <TextBox DockPanel.Dock="Right" Margin="5" Width="300" Text="{Binding AccountItemInWork.Name, Mode= TwoWay}"/>
            <TextBlock Margin="5" Text="Название" HorizontalAlignment="Left"/>
        </DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Height="40" Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="Save" Content="Принять" Height="22" Width="100" Margin="5" IsDefault="True"/>
            <Button Name="Cancel" Content="Отклонить" Height="22" Width="100" Margin="5" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
