<UserControl x:Class="Keeper2018.BorderedList.BorderedListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:keeper2018="clr-namespace:Keeper2018"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   <Border BorderBrush="Silver" BorderThickness="1" Margin="2,2,0,2"  Padding="5">
       <ItemsControl ItemsSource="{Binding List.Lines}" >
           <ItemsControl.ItemTemplate>
               <DataTemplate DataType="keeper2018:ListLine">
                    <TextBlock Text="{Binding Line}" Height="{Binding TextLineHeight}"
                              FontWeight="{Binding FontWeight}" FontSize="{Binding FontSize}" Foreground="{Binding Foreground}"/>
               </DataTemplate>
           </ItemsControl.ItemTemplate>
       </ItemsControl>
   </Border>
</UserControl>
