             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             cal:Bind.ModelWithoutContext="{Binding .}"
             mc:Ignorable="d" d:DataContext="{d:DesignData ExchangeRatesViewModel }">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button Name="Update" Content="Обновить" Margin="15, 5" Width="100" />
            <TextBlock Text="Должен быть доступен сервис 192.168.96.19/bali;  Будут взяты курсы БНБ примерно в 12:00" Margin="5"/>
        </StackPanel>
        <ListView ItemsSource="{Binding Rows}">

        </ListView>
    </DockPanel>
</UserControl>
