<Window x:Class="Keeper2018.RatesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:keeper2018="clr-namespace:Keeper2018"
        mc:Ignorable="d"
        Width="984" Height="700" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <Button Name="Close" Content="Close" Margin="5" Width="100" HorizontalAlignment="Right"/>
        </StackPanel>
        <TabControl>
            <TabItem Header="Обменные курсы" Width="150">
                <keeper2018:ExchangeRatesView DataContext="{Binding ExchangeRatesViewModel}"/>
            </TabItem>
            <TabItem Header="Официальные курсы" Width="150">
                <keeper2018:OfficialRatesView DataContext="{Binding OfficialRatesViewModel}"/>
            </TabItem>
            <TabItem Header="Золото" Width="150">
                <keeper2018:GoldRatesView DataContext="{Binding GoldRatesViewModel}"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
