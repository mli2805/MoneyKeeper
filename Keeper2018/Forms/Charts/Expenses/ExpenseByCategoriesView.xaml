<Window x:Class="Keeper2018.ExpenseByCategoriesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:local="clr-namespace:Keeper2018"
        xmlns:oxy="http://oxyplot.org/wpf"
        Width="1200" Height="800"
        d:DataContext="{d:DesignInstance local:ExpenseByCategoriesViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="85"/>
        </Grid.RowDefinitions>

        <oxy:PlotView Grid.Column="0" Grid.ColumnSpan="2" Model="{Binding MyPlotModel}" Margin="5"/>
        <StackPanel Grid.Column="0" Grid.Row="1" >
            <TextBlock Text="Double Click - " Margin="5" Foreground="DarkGray"/>
        </StackPanel>
        <Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            <ListBox Name="LegendListBox" Grid.Column="1" Margin="0,20,0,0" ItemsSource="{Binding LegendBindingSource}" 
                     HorizontalContentAlignment="Right" BorderThickness="0"/>
            <local:PeriodChoiceControl x:Name="PeriodChoiceControl" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,5,0"
                                       Interval="{Binding MyPeriod, Mode=TwoWay}" IntervalMode="{Binding MyIntervalMode, Mode=TwoWay}"/>
        </Grid>
    </Grid>
</Window>
