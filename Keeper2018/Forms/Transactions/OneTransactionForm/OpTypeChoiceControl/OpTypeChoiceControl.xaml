<UserControl x:Class="Keeper2018.OpTypeChoiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Width="20"
             mc:Ignorable="d" 
             d:DesignHeight="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="B0" Click="TypeButtonOnClick" Margin="0,5" Tag="0" Background="LightSkyBlue" />
        <Button Grid.Row="1" Name="B1" Click="TypeButtonOnClick" Margin="0,5" Tag="1" Background="Pink"/>
        <Button Grid.Row="2" Name="B2" Click="TypeButtonOnClick" Margin="0,5" Tag="2" Background="LightGray"/>
        <Button Grid.Row="3" Name="B3" Click="TypeButtonOnClick" Margin="0,5" Tag="3" Background="PaleGreen"/>
    </Grid>
</UserControl>

