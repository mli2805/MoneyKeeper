<UserControl x:Class="Keeper2018.OperationTypeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             Width="20"
             mc:Ignorable="d" 
             cal:Bind.ModelWithoutContext="{Binding .}"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="B0" Margin="0,5" Background="LightSkyBlue" />
        <Button Grid.Row="1" Name="B1" Margin="0,5" Background="Pink"/>
        <Button Grid.Row="2" Name="B2" Margin="0,5" Background="LightGray"/>
        <Button Grid.Row="3" Name="B3" Margin="0,5" Background="PaleGreen"/>
    </Grid>
</UserControl>
