<Window x:Class="BackgroundWorkerExample.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="392.771" Width="533.869">
  <Grid Background="White">
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="35"/>
      <RowDefinition Height="35"/>
    </Grid.RowDefinitions>
    <Button Name="StartLongOperation" Content="Start long operation" IsDefault="True" Grid.Row="1" Grid.Column="1" Margin="5" Width="180" HorizontalAlignment="Left" />
    <StatusBar Grid.Row="2" Margin="5">
      <StatusBar.ItemsPanel>
        <ItemsPanelTemplate>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
          </Grid>
        </ItemsPanelTemplate>
      </StatusBar.ItemsPanel>
      <StatusBarItem Grid.Column ="0">
        <TextBlock Margin="5,0,0,0" Text="{Binding StatusBarItem0}"/>
      </StatusBarItem>
      <StatusBarItem Grid.Column ="1">
        <ProgressBar Margin="5,0" Height="15" Width="300" Foreground="Blue" 
                     IsIndeterminate="True" Visibility="{Binding IsProgressBarVisible}"/>
      </StatusBarItem>
    </StatusBar>
	</Grid>

</Window>