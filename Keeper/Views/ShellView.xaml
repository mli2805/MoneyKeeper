<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModels="clr-namespace:Keeper.ViewModels" xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" x:Class="Keeper.Views.ShellView"
        mc:Ignorable="d" Title="Keeper 2012" Height="562" Width="924" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" Icon="/Keeper;component/Resources/Checkout.ico"
        d:DataContext="{d:DesignInstance {x:Type ViewModels:ShellViewModel}}">
  <Window.Resources>
    <HierarchicalDataTemplate x:Key="AccountTemplate" ItemsSource="{Binding Children}">
      <TextBlock Text="{Binding Name}"/>
    </HierarchicalDataTemplate>
  </Window.Resources>
  <Grid Margin="0">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="357*"/>
      <ColumnDefinition Width="100"/>
      <ColumnDefinition Width="100"/>
      <ColumnDefinition Width="8*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="15*"/>
      <RowDefinition Height="206*"/>
      <RowDefinition Height="17*"/>
      <RowDefinition Height="48"/>
      <RowDefinition Height="8"/>
    </Grid.RowDefinitions>
    <Label x:Name="Message" VerticalAlignment="Center" Content="Attention! Keeper is under construction!" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="0,4" Width="222" FontSize="11" Height="22" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
    <Button x:Name="RunOperationsForm" Content="Operations" Margin="13" 
            VerticalAlignment="Center" Width="74" Height="22" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" />
    <Button x:Name="AddAccount" Content="+" HorizontalAlignment="Left" 
            Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="147" Height="22"/>
    <Button x:Name="CloseProgram" Content="Close" Grid.Column="2" HorizontalAlignment="Center" Margin="10,13,16,13" Grid.Row="3" VerticalAlignment="Center" Width="74" RenderTransformOrigin="0.392,0.682" Height="22" Background="{x:Null}" BorderBrush="{x:Null}"/>

    <!-- jyghjgyjy -->
    <Menu HorizontalAlignment="Left" Margin="10,8,0,4" VerticalAlignment="Center" Background="{x:Null}" Height="18" Width="128">
      <MenuItem Header="OPERATIONS" Background="{x:Null}" Foreground="#FF0F0FFF">
        <MenuItem x:Name="ShowTransactions" Header="TRANSACTIONS"/>
        <MenuItem Header="DIAGRAMS"/>
      </MenuItem>
      <MenuItem Header="HELP" Foreground="#FF0F0FFF">
        <MenuItem Header="TO DO" />
        <Separator Style="{DynamicResource SeparatorStyle}"/>
        <MenuItem Header="ABOUT"/>
      </MenuItem>
    </Menu>
    <TabControl HorizontalAlignment="Left" Height="386" Margin="10,16,0,10" Grid.Row="1" VerticalAlignment="Center" Width="309">
      <TabItem Header="Счета">
        <TreeView x:Name="AccountsTreeView" ItemsSource="{Binding AccountsRoots}" ItemTemplate="{DynamicResource AccountTemplate}"/>
      </TabItem>
      <TabItem Header="Доходы">
        <TreeView/>
      </TabItem>
      <TabItem Header="Расходы"/>
    </TabControl>
    <Button Content="-" HorizontalAlignment="Left" Margin="171,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="148" Height="22"/>

  </Grid>
</Window>
