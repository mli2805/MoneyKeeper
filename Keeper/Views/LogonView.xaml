<Window x:Class="Keeper.Views.LogonView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:Keeper.Controls"
        Title="LogonView" Width="300" SizeToContent="Height" WindowStartupLocation="CenterScreen" Icon="/Keeper;component/Resources/square_lock.ico">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="10"/>
      <RowDefinition Height="50"/>
      <RowDefinition Height="1"/>
      <RowDefinition Height="20"/>
      
      <RowDefinition Height="85"/>
      
      <RowDefinition Height="40"/>
      <RowDefinition Height="30"/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="1" Orientation="Horizontal">
      <Image Height="48" Width="48" Source="/Keeper;component/Resources/Square_lock.ico" Margin="20,0,0,0"/>
      <TextBlock Text="Keeper (c) 2012-2013 " VerticalAlignment="Center" Margin="20,5,0,5" FontSize="16"  FontWeight="Bold"/>
    </StackPanel>
    <Button Grid.Row="2" Name="Escape" IsCancel="True" />

    <Controls:PasswordControl Password="{Binding Password, Mode=TwoWay}"  Grid.Row="4"/>
    <TextBlock Name="NowStamp" Grid.Row="6" Text="2/56/6819 2:35" HorizontalAlignment="Right" Margin="0,5,25,5"/>
  </Grid>
</Window>
