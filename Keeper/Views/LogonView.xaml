<Window x:Class="Keeper.Views.LogonView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:Keeper.Controls"
        Title="LogonView" Width="300" SizeToContent="Height" WindowStartupLocation="CenterScreen" Icon="/Keeper;component/Resources/lock.ico">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="10"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="3"/>
      <RowDefinition Height="20"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="40"/>
      <RowDefinition Height="30"/>
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="1" Text="Keeper (c) 2012-2013 " HorizontalAlignment="Center" Margin="0,5,0,5" FontWeight="Bold"/>
    <Button Grid.Row="2" Name="Escape" IsCancel="True" />
    <TextBlock Grid.Row="4" Text="Введите пароль" Margin="25,5,0,5"/>
    <Controls:PasswordControl Password="{Binding Password, Mode=TwoWay}"  Grid.Row="5"/>
    <TextBlock Name="NowStamp" Grid.Row="7" Text="2/56/6819 2:35" HorizontalAlignment="Right" Margin="0,5,25,5"/>
  </Grid>
</Window>
