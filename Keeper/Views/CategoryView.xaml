<Window x:Class="Keeper.Views.CategoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:Utils="clr-namespace:Keeper.Utils"
        Title="AddCategoryView" Height="159.233" Width="446.918">
    <Grid>
    <TextBox HorizontalAlignment="Left" Height="23" Margin="34,24,0,0" TextWrapping="Wrap" 
             VerticalAlignment="Top" Width="365"
             Text="{Binding CategoryInWork.Name}">
    <i:Interaction.Behaviors>
      <Utils:SetFocusOnLoadBehavior />
      </i:Interaction.Behaviors>
    </TextBox>
    <Button x:Name="Accept" Content="Принять" HorizontalAlignment="Left" Margin="97,79,0,0" VerticalAlignment="Top" Width="75"/>
    <Button x:Name="Decline" Content="Отклонить" HorizontalAlignment="Left" Margin="216,79,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" RenderTransformOrigin="0.493,-1.682"/>

  </Grid>
</Window>
