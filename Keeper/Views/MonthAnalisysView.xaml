<Window x:Class="Keeper.Views.MonthAnalisysView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MonthAnalisysView" SizeToContent="WidthAndHeight" ResizeMode="NoResize" >
    <Grid>
    <StackPanel>
      <ListBox Name="BeforeList" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="2,2,2,0" Padding="2,2,7,4"/>
      <ListBox Name="IncomesList" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="2,2,2,0" Padding="2,2,7,4"
               Foreground="Blue"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
        <ListBox Name="ExpenseList" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="2,2,0,0" Padding="2,2,7,4"
               Foreground="Red"/>
        <ListBox Name="LargeExpenseList" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="2,2,2,0" 
                 Padding="5,2,7,4" Foreground="Red"/>
      </StackPanel>
      <ListBox Name="AfterList" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="2" Padding="2,2,7,4"/>
      <ListBox Name="ResultList" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="2" Padding="2,2,7,4"
               Foreground="{Binding Path=ResultForeground}"/>
    </StackPanel>
  </Grid>
</Window>
