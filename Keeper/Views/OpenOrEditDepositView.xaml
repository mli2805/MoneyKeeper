<Window x:Class="Keeper.Views.OpenOrEditDepositView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenDepositView" Height="300" Width="300">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="40"/>
    </Grid.RowDefinitions>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="35"/>
        <RowDefinition Height="35"/>
        <RowDefinition Height="35"/>
        <RowDefinition Height="35"/>
        <RowDefinition Height="35"/>
        <RowDefinition Height="35"/>
      </Grid.RowDefinitions>
      <TextBlock Margin="5" Text="Банк" VerticalAlignment="Center"/>
      <ComboBox Margin="5" Width="230" HorizontalAlignment="Right"/>

      <TextBlock Grid.Row="1" Margin="5" Text="C" VerticalAlignment="Center"/>
      <DatePicker Grid.Row="1" Margin="20,5,5,5" Width="120" HorizontalAlignment="Left" FirstDayOfWeek="Monday" Text="Start" />
      <DatePicker Grid.Row="1" Margin="5" Width="120" HorizontalAlignment="Right" FirstDayOfWeek="Monday"/>
    </Grid>
    <Button Name="SaveDeposit" Grid.Row="1" Margin="5" Width="100" HorizontalAlignment="Left" Content="Ok"/>
    <Button Name="Cancel" Grid.Row="1" Margin="5" Width="100" HorizontalAlignment="Right" Content="Cancel"/>
  </Grid>
</Window>
