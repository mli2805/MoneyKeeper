<Window x:Class="Keeper.Views.RatesDiagramView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" Width="900" TextOptions.TextFormattingMode="Display">
  <Grid Background="Azure">
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition/>
      <RowDefinition Height="30"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="30*"/>
      <ColumnDefinition Width="840*"/>
      <ColumnDefinition Width="30*"/>
    </Grid.ColumnDefinitions>
    <Image Grid.Row="1" Grid.Column="1" Margin="7" Source="{Binding ImageSource}" Stretch="Fill" />
    <Button Name="IncreaseDiagram" Grid.Column="2" Grid.Row="1" Content="+" VerticalAlignment="Bottom" Margin="5,0,5,50"/>
    <Button Name="DecreaseDiagram" Grid.Column="2" Grid.Row="1" Content="-" VerticalAlignment="Bottom" Margin="5,0,5,20"/>
  </Grid>
</Window>
