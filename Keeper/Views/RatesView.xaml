<Window x:Class="Keeper.Views.RatesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Title="RatesView" Height="600" Width="950" MaxHeight="700"
        xmlns:ViewModels="clr-namespace:Keeper.ViewModels" xmlns:DomainModel="clr-namespace:Keeper.DomainModel"
        d:DataContext="{d:DesignInstance ViewModels:RatesViewModel}" SizeToContent="Height"
        >
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="200*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <DataGrid x:Name="Grid"  Margin="5" Padding="5" ItemsSource="{Binding Rows}" AutoGenerateColumns="False" 
              ColumnHeaderStyle="{StaticResource headerTextStyle}"
              Foreground="Black" HorizontalGridLinesBrush="#FFC5C3C3" VerticalGridLinesBrush="#FFC5C3C3">
      <DataGrid.Columns>
        <DataGridTextColumn Header="  Дата" SortDirection="Ascending"
                            Binding="{Binding BankDay, StringFormat=\{0:D\}}">
        </DataGridTextColumn>
        <DataGridComboBoxColumn Header="Валюта" 
                                ElementStyle="{StaticResource ComboBoxCellTextStyle}"
                                SelectedItemBinding ="{Binding CurrencyLeft}"
                                ItemsSource="{x:Static ViewModels:AllCurrencyCodes.CurrencyList}">
        </DataGridComboBoxColumn>
        <DataGridTextColumn Header="  Курс" Width="70"
                            Binding="{Binding RateOnScreen, StringFormat=\{0:G5\}}" />

        <DataGridTemplateColumn Header="Валюта" Width="30">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBlock Padding="5,0,5,0" Text="за 1"/>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
         
        </DataGridTemplateColumn>
        
        <DataGridComboBoxColumn SelectedItemBinding ="{Binding CurrencyRight}" Width="70"
                                ItemsSource="{x:Static ViewModels:AllCurrencyCodes.CurrencyList}">
        </DataGridComboBoxColumn>
      </DataGrid.Columns>
    </DataGrid>
    <Expander Header="Удобный ввод новых курсов" HorizontalAlignment="Stretch"
              BorderBrush="CornflowerBlue" BorderThickness="1"
              IsExpanded="False" ExpandDirection="Down"
              Grid.Row="1" Margin="5"   >
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="37*"/>
          <ColumnDefinition Width="197*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="30"/>
          <RowDefinition Height="30"/>
          <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Button Margin="5" Height="20" Width="30" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0">
          <Polygon Points="5,15 15,15 10,8" Fill="Black"></Polygon>
        </Button>
        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">

        </TextBox>
        <Button Margin="64.632,5,102,5"   Height="20" Width="30" Grid.Row="2" Grid.Column="0">
          <Polygon Points="5,5 15,5 10,12" Fill="Black"></Polygon>
        </Button>
      </Grid>
    </Expander>
    <StackPanel Grid.Column="1" HorizontalAlignment="Left" Margin="31,32,0,0" VerticalAlignment="Top" Width="172" RenderTransformOrigin="0.39,0.35">
      <Grid Height="121">
        <Grid.RowDefinitions>
          <RowDefinition Height="36*"/>
          <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <CheckBox  HorizontalAlignment="Center" VerticalAlignment="Center" Height="36" Width="90"
                   IsChecked="{Binding IsFilterChecked}" Margin="41,14,41,10">
          <CheckBox.Content>
            <TextBlock Text="Показать одну валюту" TextWrapping="Wrap" Height="32"/></CheckBox.Content>
        </CheckBox>
        <ComboBox  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"
    			ItemsSource="{x:Static ViewModels:CurrencyCodesForFilter.CurrencyList}"
    			SelectedItem="{Binding SelectedCurrencyFilter}" Height="22"/>
      </Grid>
    </StackPanel>

  </Grid>
</Window>
