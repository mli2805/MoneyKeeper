<UserControl x:Class="Keeper.Controls.PasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
    <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" FontSize="24" FontWeight="bold"  Margin="20,5,0,5" Width="190"/>
    <Button Name="LogIn" IsDefault="True" HorizontalAlignment="Right" Margin="0,5,20,5" Width="50" Click="LogInClick">
        <Image Height="32" Width="32" Source="/Keeper;component/Resources/keys.ico"/>
    </Button>

  </Grid>
</UserControl>
