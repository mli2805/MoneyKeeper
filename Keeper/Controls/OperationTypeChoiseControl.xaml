<UserControl x:Class="Keeper.Controls.OperationTypeChoiseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             cal:Bind.ModelWithoutContext="{Binding .}"
             Height="10"
             mc:Ignorable="d" 
             d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Name="B0" Background="Blue"/>
        <Button Grid.Column="1" Name="B1" Background="Red"/>
        <Button Grid.Column="2" Name="B2" Background="Gray"/>
        <Button Grid.Column="3" Name="B3" Background="Green"/>
        <Button Grid.Column="4" Name="B4" Background="DarkOliveGreen"/>
    </Grid>
</UserControl>
