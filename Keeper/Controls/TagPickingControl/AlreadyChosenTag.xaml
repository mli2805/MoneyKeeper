<UserControl x:Class="Keeper.Controls.TagPickingControl.AlreadyChosenTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Keeper.Controls.TagPickingControl"
             xmlns:cal="http://www.caliburnproject.org"
             Height="25"
             mc:Ignorable="d"
             cal:Bind.ModelWithoutContext="{Binding .}"
             d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Content="x" Width="15" Height="20"  VerticalAlignment="Top" Margin="0,3,0,0" Background="Transparent" BorderBrush="Transparent" Click="DeleteTagOnClick"/>
            <Label Content="{Binding Tag.Name}"/>
        </StackPanel>

    </Grid>
</UserControl>
