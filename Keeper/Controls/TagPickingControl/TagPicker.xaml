<UserControl x:Class="Keeper.Controls.TagPickingControl.TagPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Keeper.Controls.TagPickingControl"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:accNameSelectionControl="clr-namespace:Keeper.Controls.AccNameSelectionControl"
             cal:Bind.ModelWithoutContext="{Binding .}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <ItemsControl ItemsSource="{Binding ListOfChosenTagsVm}" Margin="5,5,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:AlreadyChosenTag DataContext="{Binding Tag}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <accNameSelectionControl:AccNameSelector DataContext="{Binding TagSelectorVm}" Margin="0,20,0,0"/>

        </StackPanel>

    </Grid>
</UserControl>
