<UserControl x:Class="Keeper.Controls.TestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             cal:Bind.ModelWithoutContext="{Binding .}"
             >
    <Grid >
        <TextBox Text="{Binding TextProperty}" VerticalAlignment="Top"  />
        <Button Height="25" Margin="5,50,0,0" Content="press" Name="PressButton"/>
    </Grid>
</UserControl>
