<UserControl x:Class="Keeper.Controls.DateOrPeriodAggregateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:Keeper.Controls" mc:Ignorable="d" 
            >
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Controls:BalancesListControl />
    <Controls:ShellViewPeriodSelectControl Visibility="{Binding PeriodSelectControlVisibility}" 
                  SelectedPeriod="{Binding TranslatedPeriod, Mode=TwoWay}" VerticalAlignment="Bottom" Height="200" Margin="0,0,0,0" Grid.Row="0"/>
    <Controls:ShellViewDateSelectControl Visibility="{Binding DateSelectControlVisibility}" 
                  SelectedDay="{Binding TranslatedDate, Mode=TwoWay}" VerticalAlignment="Bottom" Height="130" Margin="0,0,0,0" Grid.Row="1"/>
  </Grid>
</UserControl>
